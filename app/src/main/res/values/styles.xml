<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WMatchHWrap.TeamNames">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textSize">@dimen/team_name</item>
    </style>

    <style name="WMatchHWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WMatchHWrap.Setting">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="WMatchHWrap.Setting.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="WMatchHWrap.Setting.Text"></style>

    <style name="WMatchHWrap.Setting.Value"></style>

    <style name="WMatchHWrap.Button">
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="WWrapHMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WMatchHWrap.Title">
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/root_padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@android:dimen/app_icon_size</item>
    </style>

    <style name="TeamSide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WMatchHWrap.Score">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/score</item>
    </style>

    <style name="WMatchHWrap.WinSpacing">
        <item name="android:layout_marginBottom">@dimen/button_spacing</item>
        <item name="android:layout_marginTop">@dimen/root_padding</item>
    </style>

    <style name="Wins">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/wins_padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Wins.Text">
        <item name="android:text">@string/wins</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Wins.Number">
        <item name="android:gravity">end</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
