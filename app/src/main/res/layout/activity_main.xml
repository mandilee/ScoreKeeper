<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  style="@style/WMatchHWrap"
                  android:orientation="vertical">

        <TextView
            style="@style/WMatchHWrap.Title"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/app_title"/>

        <!-- Team A -->
        <TextView
            style="@style/WMatchHWrap.Setting.Header"
            android:text="@string/team_a_title"/>

        <EditText
            android:id="@+id/teamAName"
            style="@style/WMatchHWrap.Setting"
            android:hint="@string/team_a_hint"/>

        <!-- Team B -->
        <TextView
            style="@style/WMatchHWrap.Setting.Header"
            android:text="@string/team_b_title"/>

        <EditText
            android:id="@+id/teamBName"
            style="@style/WMatchHWrap.Setting"
            android:hint="@string/team_b_hint"/>

        <!-- Points -->
        <TextView
            style="@style/WMatchHWrap.Setting.Header"
            android:text="@string/points_title"/>

        <EditText
            android:id="@+id/points"
            style="@style/WMatchHWrap.Setting"
            android:hint="@string/points_hint"/>

        <!-- Rounds -->
        <TextView
            style="@style/WMatchHWrap.Setting.Header"
            android:text="@string/rounds_title"/>

        <EditText
            android:id="@+id/rounds"
            style="@style/WMatchHWrap.Setting"
            android:hint="@string/rounds_hint"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/defaultButton"
                style="@style/WMatchHWrap.Button"
                android:text="@string/apply_default_setttings"/>

            <Button
                android:id="@+id/beginButton"
                style="@style/WMatchHWrap.Button"
                android:text="@string/begin_button"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
